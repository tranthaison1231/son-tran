---
import type { Content } from '@/partials/BlogPost.astro';
import Hero from '@/partials/Hero.astro';
import Projects from '@/partials/Projects.astro';
import RecentPosts from '@/partials/RecentPosts.astro';
import Base from '@/templates/Base.astro';
import { AppConfig } from '@/utils/AppConfig';
import { sortByDate } from '@/utils/Posts';

const allPosts = await Astro.glob<Content>('./posts/*.md');
const sortedPosts = sortByDate(allPosts);
const lastThreePosts = sortedPosts.slice(0, 3);

const { title } = AppConfig;
const { description } = AppConfig;
---

<Base head={{ title, description }}>
  <Hero />
  <Projects />
  <RecentPosts posts={lastThreePosts} />
</Base>
