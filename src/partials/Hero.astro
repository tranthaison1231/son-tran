---
import { Picture } from 'astro-imagetools/components';

import { AppConfig } from '@/utils/app-config';

import Section from './Section.astro';
---

<Section>
  <div class="flex flex-col items-center md:flex-row md:justify-between md:gap-x-24">
    <div>
      <h1
        class="`xs:text-[50px] mt-2 text-[30px] font-black text-white sm:text-[60px] lg:text-[80px] lg:leading-[98px]"
      >
        Hi, I'm <span class="text-[#915EFF]">{AppConfig.name}</span>
      </h1>

      <p class="xs:text-[20px] mt-2 text-[16px] font-medium text-white sm:text-[26px] lg:text-[30px] lg:leading-[40px]">
        I develop 3D visuals, user <br class="hidden sm:block" />
        interfaces and web applications
      </p>

      <div class="mt-3 flex gap-1">
        {
          Object.values(AppConfig.socials).map(social =>
            social?.icon ? (
              <a href={social.link} class="hover:scale-125">
                <Picture width={40} src={social.icon} alt={social.alt} loading="lazy" />
              </a>
            ) : null
          )
        }
      </div>
    </div>

    <div class="shrink-0">
      <img class="h-80 w-64" src="/assets/images/avatar.svg" alt="Avatar image" loading="lazy" />
    </div>
  </div>
</Section>
