---
import { Image } from 'astro:assets';

import avatar from '@/assets/images/avatar.svg';
import { AppConfig } from '@/utils/app-config';

import LazyComputersCanvas from './LazyComputerCanvas';
---

<div class="mx-auto max-w-screen-lg px-4 py-6">
  <section class="relative mx-auto h-screen">
    <div class="absolute inset-0 flex flex-row items-start gap-5">
      <div class="flex flex-col items-center md:flex-row md:justify-between md:gap-x-24">
        <div class="animate-fade-right">
          <h1 class="xs:text-[50px] mt-2 text-[50px] text-white sm:text-[60px] lg:text-[72px] lg:leading-[98px]">
            Hi, I'm{' '}
            <span class="text-[#915EFF]">
              {AppConfig.name}
            </span>
            <span class="inline-block animate-wave">üëãüèª</span>
          </h1>
          <p
            class="xs:text-[20px] mt-2 text-[24px] font-medium text-white sm:text-[26px] lg:text-[30px] lg:leading-[40px]"
          >
            I develop 3D visuals, user <br class="hidden sm:block" />
             interfaces and web applications
          </p>

          <div class="mt-3 flex gap-1">
            {
              Object.values(AppConfig.socials).map(social =>
                social?.icon ? (
                  <a href={social.link} class="hover:scale-125">
                    <Image width="40" height="40" src={social.icon} alt={social.alt} loading="lazy" format="webp" />
                  </a>
                ) : null
              )
            }
          </div>
        </div>

        <div class="hidden shrink-0 animate-fade-left sm:block">
          <Image width={256} height={320} src={avatar} alt="Avatar image" />
        </div>
      </div>
    </div>
    <LazyComputersCanvas client:only />
    <div class="absolute bottom-48 flex w-full items-center justify-center sm:bottom-32">
      <a href="#about" aria-label="About">
        <div class="flex h-[64px] w-[35px] items-start justify-center rounded-3xl border-4 border-[#aaa6c3] p-2">
          <div class="mb-1 h-3 w-3 animate-jump rounded-full bg-[#aaa6c3]"></div>
        </div>
      </a>
    </div>
  </section>
</div>
