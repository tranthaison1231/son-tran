---
import { Image } from 'astro:assets';

import avatar from '@/assets/images/avatar.svg';
import { AppConfig } from '@/utils/app-config';

import LazyComputersCanvas from './LazyComputerCanvas';
---

<div class="relative mx-auto max-w-screen-lg py-6">
  <section class="mx-auto h-screen">
    <div class="absolute z-20 flex w-full flex-col items-center px-4 md:flex-row md:justify-between md:px-0">
      <div class="animate-fade-right">
        <h1 class="mt-2 text-4xl text-white sm:text-5xl md:text-6xl lg:text-7xl lg:leading-[98px]">
          Hi, I'm{' '}
          <span class="text-[#7e67fd]">
            {AppConfig.name}
          </span>
          <span class="inline-block animate-wave">👋🏻</span>
        </h1>
        <p class="mt-2 text-xl font-medium text-white sm:text-2xl lg:text-3xl lg:leading-10">
          <span
            class="inline-block w-[251px] animate-typing overflow-hidden whitespace-nowrap sm:w-[300px] lg:w-[380px]"
            >I develop 3D visuals, user</span
          ><br class="hidden sm:block" />
          <span
            class="animate-delay-2000 animate-fill-forwards inline-block w-[324px] animate-typing overflow-hidden whitespace-nowrap opacity-0 sm:w-[390px] lg:w-[490px]"
            >interfaces and web applications</span
          >
        </p>

        <div class="mt-3 flex gap-1">
          {
            Object.values(AppConfig.socials).map(social =>
              social?.icon ? (
                <a href={social.link} class="hover:scale-125">
                  <Image width="40" height="40" src={social.icon} alt={social.alt} loading="eager" decoding="sync" />
                </a>
              ) : null
            )
          }
        </div>
      </div>

      <div class="hidden shrink-0 animate-fade-left md:block">
        <Image width={256} height={320} src={avatar} alt="Avatar image" format="webp" loading="lazy" />
      </div>
    </div>
    <LazyComputersCanvas client:only />
  </section>
  <div class="absolute bottom-48 z-20 flex w-full items-center justify-center sm:bottom-40">
    <a href="#about" aria-label="About">
      <div class="flex h-[64px] w-[35px] items-start justify-center rounded-3xl border-4 border-[#aaa6c3] p-2">
        <div class="mb-1 h-3 w-3 animate-jump rounded-full bg-[#aaa6c3]"></div>
      </div>
    </a>
  </div>
</div>
